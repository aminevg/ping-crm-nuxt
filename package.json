{
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "husky install",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --check --no-error-on-unmatched-pattern --ignore-path .gitignore **/*.{js,json,ts,vue,css,md,yaml,yml}",
    "lint:eslint": "eslint --ignore-path .gitignore --max-warnings 0 '**/*.{js,ts,vue}'"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^3.2.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nuxt": "3.0.0-rc.4",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix",
    "*.{js,json,ts,vue,css,md,yaml,yml}": "prettier --write"
  }
}
